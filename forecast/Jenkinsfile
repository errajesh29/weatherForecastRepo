pipeline {
    agent any
    tools {
        maven 'maven-3.6.3'
        jdk 'OpenJDK-11'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }
        stage ('Build') {
            steps {
                echo 'This is a minimal pipeline.'
                sh 'mvn clean install'
                sh 'mvn compile'
                sh 'mvn package'
            }
        }
        stage ('Image') {
            steps {
                echo "Docker Image Tag Name: 1.0.0"
                sh "docker stop forecast"
                sh "docker rm forecast"
                sh "docker run --name forecast -d -p 3000:3000 forecast:1.0.0"
            }
        }
    }
}