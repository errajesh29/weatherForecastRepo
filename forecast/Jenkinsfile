pipeline {
    agent any
    tools {
        maven 'maven-3.6.3'
        jdk 'JDK'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }
        stage ('Build') {
            steps {
                echo 'This is a minimal pipeline.'
            }
        }
        stage ('Image') {
            steps {
                echo "Docker Image Tag Name: forecast:latest"
                sh "docker build -t forecast ."
                sh 'docker push forecast:latest'
                sh "docker run --name forecast -d -p 3000:3000 forecast:latest"
            }
        }
    }
}