pipeline {
    environment {
        registry = "forecast:latest"
        registryCredential = 'dockerhub'
        dockerImage = ''
    }
    agent any
    tools {
        maven 'maven-3.6.3'
        jdk 'JDK'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }
        stage('Building image') {
          steps{
            script {
              dockerImage = docker.build registry + " ."
            }
          }
        }
        stage ('Pushing image') {
            steps {
                echo "Docker Image push forecast:latest"
                script {
                  docker.withRegistry( '', registryCredential ) {
                    dockerImage.push()
                    sh "docker run --name forecast -d -p 3000:3000 forecast:latest"
                  }
            }
        }
    }
}